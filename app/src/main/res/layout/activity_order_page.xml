<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".order_page">

    <FrameLayout
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:background="#58C648"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GO-Food"
                android:textColor="#fff"
                android:textSize="20dp"
                android:textStyle="bold"/>
        </androidx.appcompat.widget.Toolbar>
    </FrameLayout>

    <TextView
        android:id="@+id/text"
        android:layout_below="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pesanan Anda Akan Di Kirim"
        android:gravity="center"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="25dp"/>


    <ImageView
        android:id="@+id/gambar"
        android:layout_marginTop="35dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_below="@+id/text"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/deliv"/>

    <TextView
        android:id="@+id/id_nama"
        android:layout_below="@+id/gambar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pesanan Anda Akan Di Kirim"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginTop="55dp"/>
    <TextView
        android:id="@+id/id_pesanan"
        android:layout_below="@+id/id_nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pesanan Anda Akan Di Kirim"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/id_alamat"
        android:layout_below="@+id/id_pesanan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pesanan Anda Akan Di Kirim"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginTop="20dp"/>
    <Button
        android:id="@+id/cancel"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_alamat"
        android:text="CANCEL"
        android:textSize="15sp"
        android:background="@drawable/btn_order_bg"
        android:textColor="#fff"
        android:padding="15dp"
        android:layout_marginTop="55dp"
        android:layout_centerInParent="true"
        />

</RelativeLayout>